<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:id="@+id/scrollView"
        style="@style/scrollview_default">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="RSA general parameters:"
                android:focusable="false"
                style="@style/wrapping_textview" />

            <Space
                android:layout_width="20dp"
                android:layout_height="5dp"
                android:id="@+id/space1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:text="p: "
                    style="@style/wrapping_textview" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/txtPrimeP"
                    android:singleLine="true"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:text="q: "
                    style="@style/wrapping_textview" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/txtPrimeQ"
                    android:singleLine="true"
                    android:inputType="number" />
            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:id="@+id/space3" />

            <TextView
                android:text="n: will be calculated"
                android:freezesText="true"
                android:id="@+id/lblCalculatedN"
                style="@style/wrapping_textview" />

            <TextView
                android:text="phi(n): will be calculated"
                android:freezesText="true"
                android:id="@+id/lblCalculatedPhiOfN"
                style="@style/wrapping_textview" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:text="e: "
                    style="@style/wrapping_textview" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/txtNumberE"
                    android:singleLine="true"
                    android:inputType="number" />
            </LinearLayout>

            <TextView
                android:text="d: will be calculated"
                android:freezesText="true"
                android:id="@+id/lblCalculatedNumberD"
                style="@style/wrapping_textview" />

            <Space
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:id="@+id/space4" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#c7222525" />

            <Space
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:id="@+id/space5" />

            <TextView
                android:text="Number to decrypt: "
                style="@style/wrapping_textview" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/txtNumberToDecrypt"
                android:singleLine="true"
                android:inputType="number" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decrypt normal"
                    android:id="@+id/btnDecryptNormal" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decrypt (CRT)"
                    android:id="@+id/btnDecryptCRT" />
            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:id="@+id/space6"
                android:focusableInTouchMode="false" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#c7222525" />

            <Space
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:id="@+id/space7" />

            <TextView
                android:text="Number to encrypt: "
                style="@style/wrapping_textview" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/txtNumberToEncrypt"
                android:singleLine="true"
                android:inputType="number" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encrypt"
                    android:id="@+id/btnEncrypt" />
            </LinearLayout>

            <Space
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:id="@+id/space8"
                android:focusableInTouchMode="false" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#c7222525" />

            <Space
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:id="@+id/space9"
                android:focusableInTouchMode="false" />

            <ProgressBar
                style="@style/task_progressbar"
                android:id="@+id/progressBar" />

            <Space
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:id="@+id/space10" />

            <TextView
                android:text=""
                android:id="@+id/lblResult"
                android:visibility="invisible"
                style="@style/wrapping_textview" />

            <TextView
                android:text="Taken time: ..."
                android:id="@+id/lblTimeMeasurement"
                android:visibility="invisible"
                style="@style/wrapping_textview" />

            </LinearLayout>
    </ScrollView>

</LinearLayout>