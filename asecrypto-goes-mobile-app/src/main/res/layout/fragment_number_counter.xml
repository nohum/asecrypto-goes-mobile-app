<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="How many bits should the number consist of?"
        android:id="@+id/lblNumberOfBits" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/space1" />

    <EditText
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtBitNumber"
        android:numeric="integer"
        android:singleLine="true"
        android:inputType="number" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/space2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="OR: Input your target number"
        android:id="@+id/lblConcreteNumber" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/space3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtConcreteNumber"
        android:numeric="integer"
        android:singleLine="true" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/space4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start counting"
        android:id="@+id/btnCount" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/space5"
        android:focusableInTouchMode="false" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:indeterminate="true"
        android:indeterminateOnly="true"
        android:visibility="invisible" />

    <Space
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:id="@+id/space6"
        android:clickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Target number:"
        android:id="@+id/lblResultNumber"
        android:visibility="invisible" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/space7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Taken time: ..."
        android:id="@+id/lblTimeMeasurement"
        android:visibility="invisible" />

</LinearLayout>