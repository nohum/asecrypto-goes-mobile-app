<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Miller-Rabin - number to test:"
                style="@style/wrapping_textview" />

            <Space
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:id="@+id/space1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:text="Bits: "
                    style="@style/wrapping_textview" />

                <EditText
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/txtBitsForNumber"
                    android:singleLine="true"
                    android:inputType="number" />
            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:id="@+id/space2" />

            <TextView
                android:text="Alternatively: Specify a concrete number: "
                style="@style/wrapping_textview" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/txtConcreteNumber"
                android:singleLine="true"
                android:inputType="number" />


            <Space
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:id="@+id/space3" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:text="Number of test runs: "
                    style="@style/wrapping_textview" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/txtNumberOfRuns"
                    android:singleLine="true"
                    android:inputType="number" />
            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/space4" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Miller-Rabin test"
                    android:id="@+id/btnStartTest" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/btnCancel"
                    android:visibility="invisible" />
            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/space5"
                android:focusableInTouchMode="false" />

            <ProgressBar
                style="@style/task_progressbar"
                android:id="@+id/progressBar" />

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/space9" />

            <TextView
                android:text=""
                android:id="@+id/lblTestNumber"
                android:visibility="invisible"
                style="@style/wrapping_textview" />

            <TextView
                android:text=""
                android:id="@+id/lblTestResult"
                android:visibility="invisible"
                style="@style/wrapping_textview" />

            <TextView
                android:text="Taken time: ..."
                android:id="@+id/lblTimeMeasurement"
                android:visibility="invisible"
                style="@style/wrapping_textview" />

            </LinearLayout>
    </ScrollView>

</LinearLayout>