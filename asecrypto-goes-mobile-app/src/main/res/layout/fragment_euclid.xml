<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="First number:"
        android:id="@+id/lblFirstNumber" />

    <Space
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:id="@+id/space1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bits: "
            android:id="@+id/lblBitsFirstNumber" />

        <EditText
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/txtFirstBits"
            android:numeric="integer"
            android:singleLine="true"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="OR concrete number: "
            android:id="@+id/lblConcreteFirstNumber" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/txtFirstNumber"
            android:numeric="integer"
            android:singleLine="true"
            android:inputType="number" />
    </LinearLayout>

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/space2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Second number:"
        android:id="@+id/lblSecondNumber" />

    <Space
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:id="@+id/space3" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bits: "
            android:id="@+id/lblBitsSecondNumber" />

        <EditText
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/txtSecondBits"
            android:numeric="integer"
            android:singleLine="true"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="OR concrete number: "
            android:id="@+id/lblConcreteSecondNumber" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtSecondNumber"
            android:numeric="integer"
            android:singleLine="true" />
    </LinearLayout>

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/space4" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GCD iterative"
            android:id="@+id/btnIterative" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GCD recursive"
            android:id="@+id/btnRecursive" />
    </LinearLayout>

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/space5"
        android:focusableInTouchMode="false" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:indeterminate="true"
        android:indeterminateOnly="true"
        android:visibility="invisible" />

    <Space
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:id="@+id/space6"
        android:clickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Greatest common divisor:"
        android:id="@+id/lblResultNumber"
        android:visibility="invisible" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/space7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Taken time: ..."
        android:id="@+id/lblTimeMeasurement"
        android:visibility="invisible" />

</LinearLayout>